<div class="row">
  <div class="col-lg-6">
    <h1>Friends</h1>
    <% if @friends.any? %>
      <ul>
        <% for friend in @friends %>
          <li>
            <%= friend.name %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p><strong>No Friends!!</strong></p>
    <% end %>
  </div>
</div>
